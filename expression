(define (operator) (uniform-draw '(+ - * /)))
(define (atom)     (uniform-draw '(1 2 3 4 5)))
(define (expression) (uniform-draw
                      (list
                       (atom)
                       (list (operator) (atom) (atom)))))

;(apply (eval (operator)) '(1 2))

(define test
  (mh-query 1000 10
            (define expr (expression))
            expr
            (condition (= (eval expr) 3))
            ))


;(display (expression))
(hist test "Test")
